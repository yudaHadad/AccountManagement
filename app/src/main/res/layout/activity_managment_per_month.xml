<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.accountmanagement.ManagmentPerMonthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/managmentMontTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:text="" />

        <TextView
            android:id="@+id/allIncomesPerMonthTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:text="" />

        <Button
            android:id="@+id/addOneTimeIncomeBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:background="#00fafafa"
            android:text="הוספת הכנסה חד פעמית"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/allExpansesPerMonthTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="25"
            android:text="" />
    </LinearLayout>

    <ListView
        android:id="@+id/managmentMontLV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <ImageButton
            android:id="@+id/AddExpanseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_add" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/FragmentAddLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</FrameLayout>
