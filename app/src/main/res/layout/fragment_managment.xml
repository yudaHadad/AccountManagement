<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.dell.accountmanagement.ManagementFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SettingBudgetForExpansesBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark"
            android:text="הגדרת תקציב להוצאות"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/ConstIncomeBreakdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark"
            android:text="פירוט הכנסות קבועות"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <ListView
        android:id="@+id/allMonthManagementLV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78" />

</LinearLayout>
